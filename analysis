pipeline {
    agent { label 'Linux'}
    options {
        buildDiscarder(logRotator(numToKeeoStr: '5'))
    }
    stages {
        stages('Scan') {
            steps {
                withSonarQubeEnv(installationName: 'sonar-1') {
                    sh '/usr/bin/mvn clen org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar'
                }
            }
        }
    }
}